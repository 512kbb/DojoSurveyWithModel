@{
    ViewData["Title"] = "Survey";
}

<form method="post" action="results">
    <div class="mb-3">
        <label for="Name">Your Name</label>
        <input type="text" name="Name" id="Name" required>
    </div>
    <div class="mb-3">
        <label for="Location">Dojo Location</label>
        <select name="DojoLocation" id="DojoLocation">
            <option value="San Jose">San Jose</option>
            <option value="Santiago">Santiago</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="FavoriteLanguage">Favorite Language</label>
        <select name="FavoriteLanguage" id="FavoriteLanguage">
            <option value="C#">C#</option>
            <option value="Javascript">Javascript</option>
            <option value="Python">Python</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="Comment" class="form-label">Comment (Optional)</label>
        <textarea class="form-control w-auto" name="Comment" id="Comment" cols="50" rows="5" ></textarea>
    </div>
    <button class="btn btn-primary">Submit</button>
</form>
